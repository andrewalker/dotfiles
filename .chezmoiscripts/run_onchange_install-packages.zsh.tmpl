#!/usr/bin/env zsh

set -euo pipefail

{{ if eq .chezmoi.os "darwin" -}}

brew bundle --file=/dev/stdin <<EOF
{{ range .packages.darwin.brews -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.casks -}}
cask {{ . | quote }}
{{ end -}}
EOF

{{- else if (and (eq .chezmoi.os "linux") (eq .chezmoi.osRelease.id "arch")) -}}

sudo pacman -S --quiet --noconfirm {{ .packages.archlinux.shell | join " " }}

{{ if not .headless -}}
sudo pacman -S --quiet --noconfirm {{ .packages.archlinux.desktop | join " " }}
{{- end }}

{{ end -}}

# vim: ft=zsh
