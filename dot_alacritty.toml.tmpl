[font]
size = 17.0

[font.normal]
family = "Iosevka Term Slab"
{{ if .alacritty.lightfont -}}
style = "Light"
{{- else -}}
style = "Regular"
{{- end }}

[font.italic]
family = "Iosevka Term Slab"
{{ if .alacritty.lightfont -}}
style = "Light Italic"
{{- else -}}
style = "Italic"
{{- end }}

[font.bold]
family = "Iosevka Term Slab"
{{ if .alacritty.lightfont -}}
style = "Regular"
{{- else -}}
style = "Bold"
{{- end }}

# TOML interpretation of the https://github.com/nordtheme/alacritty
# See also: https://github.com/nordtheme/alacritty/issues/40
# (if the above is resolved, you may not need this Gist)

[colors.primary]
background = "#2e3440"
foreground = "#d8dee9"
dim_foreground = "#a5abb6"

[colors.cursor]
text = "#2e3440"
cursor = "#d8dee9"

[colors.vi_mode_cursor]
